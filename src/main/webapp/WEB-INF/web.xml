<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <display-name>Wheels Application</display-name>

    <!-- Admin Servlets -->
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.wheels.controller.admin.DashboardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ParcsServlet</servlet-name>
        <servlet-class>com.wheels.controller.admin.ParcsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UnitsServlet</servlet-name>
        <servlet-class>com.wheels.controller.admin.UnitsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookingsServlet</servlet-name>
        <servlet-class>com.wheels.controller.admin.BookingsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DriversServlet</servlet-name>
        <servlet-class>com.wheels.controller.admin.DriversServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CalendarServlet</servlet-name>
        <servlet-class>com.wheels.controller.admin.CalendarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClientsServlet</servlet-name>
        <servlet-class>com.wheels.controller.admin.ClientsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FinancialsServlet</servlet-name>
        <servlet-class>com.wheels.controller.admin.FinancialsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TrackingServlet</servlet-name>
        <servlet-class>com.wheels.controller.admin.TrackingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MessagesServlet</servlet-name>
        <servlet-class>com.wheels.controller.admin.MessagesServlet</servlet-class>
    </servlet>

    <!-- Admin Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ParcsServlet</servlet-name>
        <url-pattern>/admin/parcs</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UnitsServlet</servlet-name>
        <url-pattern>/admin/units</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookingsServlet</servlet-name>
        <url-pattern>/admin/bookings</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DriversServlet</servlet-name>
        <url-pattern>/admin/drivers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CalendarServlet</servlet-name>
        <url-pattern>/admin/calendar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClientsServlet</servlet-name>
        <url-pattern>/admin/clients</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FinancialsServlet</servlet-name>
        <url-pattern>/admin/financials</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TrackingServlet</servlet-name>
        <url-pattern>/admin/tracking</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MessagesServlet</servlet-name>
        <url-pattern>/admin/messages</url-pattern>
    </servlet-mapping>

    <!-- Public/User Servlets -->
    <servlet>
        <servlet-name>CarBrowseServlet</servlet-name>
        <servlet-class>com.wheels.controller.user.CarBrowseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookingServlet</servlet-name>
        <servlet-class>com.wheels.controller.user.BookingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserBookingServlet</servlet-name>
        <servlet-class>com.wheels.controller.user.UserBookingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>com.wheels.controller.user.ProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>com.wheels.controller.user.AuthServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DriverServlet</servlet-name>
        <servlet-class>com.wheels.controller.user.DriverServlet</servlet-class>
    </servlet>

    <!-- Public/User Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>CarBrowseServlet</servlet-name>
        <url-pattern>/browse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarBrowseServlet</servlet-name>
        <url-pattern>/featured</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarBrowseServlet</servlet-name>
        <url-pattern>/car-details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookingServlet</servlet-name>
        <url-pattern>/book</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserBookingServlet</servlet-name>
        <url-pattern>/my-bookings</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DriverServlet</servlet-name>
        <url-pattern>/driver</url-pattern>
    </servlet-mapping>

    <!-- Welcome File -->
    <welcome-file-list>
        <welcome-file>user/index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Declare Security Roles -->
    <security-role>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <role-name>driver</role-name>
    </security-role>
    <security-role>
        <role-name>client</role-name>
    </security-role>

</web-app>